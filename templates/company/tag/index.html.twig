{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <h1>Tag index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CompanyCounter</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {% for tag in tags %}
                        {% if tag.companies|length == 0 %}
                            <button type="button" class="btn btn-outline-primary">{{ tag.name }} <span class="badge badge-pill badge-primary">{{ tag.companies|length }}</span></button>
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('company.tag.new') }}">Create new</a>
{% endblock %}