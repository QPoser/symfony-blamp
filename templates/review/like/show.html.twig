{% extends 'base.html.twig' %}

{% block title %}Like{% endblock %}

{% block body %}
    <h1>Like</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ like.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ like.value ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ like.createdAt ? like.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('review_like_index') }}">back to list</a>

    <a href="{{ path('review_like_edit', {'id': like.id}) }}">edit</a>

    {{ include('review_like/_delete_form.html.twig') }}
{% endblock %}