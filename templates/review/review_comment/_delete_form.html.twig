<form method="post" action="{{ path('comment.delete', {'id': review_comment.id}) }}" onsubmit="return confirm('Вы уверены что хотите удалить комментарий?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review_comment.id) }}">
    <button class="btn btn-danger">Удалить</button>
</form>