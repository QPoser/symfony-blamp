{% extends 'base.html.twig' %}

{% block title %}ReviewComment{% endblock %}

{% block body %}
    <h1>ReviewComment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review_comment.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ review_comment.text }}</td>
            </tr>
            <tr>
                <th>IsCompany</th>
                <td>{{ review_comment.isCompany ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ review_comment.status }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ review_comment.lft }}</td>
            </tr>
            <tr>
                <th>Lvl</th>
                <td>{{ review_comment.lvl }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ review_comment.rgt }}</td>
            </tr>
            <tr>
                <th>Root</th>
                <td>{{ review_comment.root }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ review_comment.created ? review_comment.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ review_comment.updated ? review_comment.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('review_comment_index') }}">back to list</a>

    <a href="{{ path('review_comment_edit', {'id': review_comment.id}) }}">edit</a>

    {{ include('review_comment/_delete_form.html.twig') }}
{% endblock %}