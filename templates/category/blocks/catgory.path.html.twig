<div class="category-path">
    <style>
        .category-path {
            display: table;
            direction: rtl;
        }

        .category-path span {
            display: table-cell;
            border: none;
            box-sizing: border-box;
            text-align: center;
            text-decoration: none;
            direction: rtl;
        }
    </style>
    {% import _self as macros %}
    {% macro category_path(category, currentPath) %}
        {% import _self as macros %}
        <span><a class="btn badge {% if currentPath == path('category.show', {'id': category.id}) %}badge-secondary disabled{% else %}badge-primary{% endif %}" href="{{ path('category.show', {'id': category.id}) }}">{{ category.name }}</a></span>
        {% if category.parentCategory %}
            {{ macros.category_path(category.parentCategory, currentPath) }}
        {% endif %}
    {% endmacro %}

    {{ macros.category_path(category, currentPath) }}
</div>