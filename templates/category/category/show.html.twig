{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h2 class="category-path">
            <style>
                .category-path {
                    display: table;
                    direction: rtl;
                }

                .category-path span {
                    display: table-cell;
                    border: none;
                    box-sizing: border-box;
                    text-align: center;
                    text-decoration: none;
                    direction: rtl;
                }
            </style>
            {% import _self as macros %}
            {% macro category_path(category, currentPath) %}
                {% import _self as macros %}
                {% if category.parentCategory %}
                    <span><a class="btn {% if currentPath == path('category.show', {'id': category.id}) %}disabled{% endif %}" href="{{ path('category.show', {'id': category.id}) }}">{{ category.name }}</a>/</span>
                {% else %}
                    <span><a class="btn {% if currentPath == path('category.show', {'id': category.id}) %}disabled{% endif %}" href="{{ path('category.show', {'id': category.id}) }}">{{ category.name }}</a></span>
                {% endif %}
                {% if category.parentCategory %}
                    {{ macros.category_path(category.parentCategory, currentPath) }}
                {% endif %}
            {% endmacro %}

            {{ macros.category_path(category, currentPath) }}
    </h2>
    <a href="{{ path('company.create') }}" class="btn btn-success">Добавить компанию</a>
    <a href="{{ path('category.index') }}" class="btn btn-info">Назад к рубрикам</a>
    <hr>

    <div class="row">
        <lable class="col-sm-2" for="search-input-category">Поиск по рубрике</lable>
        <div class="col-md-12">
            <form action="{{ path('category.show', {'id': category.id}) }}" method="GET">
                <div class="row">
                    <div class="col-md-11">
                        <div class="form-group">
                            <input id="search-input-category" type="text" class="form-control" name="search" value="{{ app.request.get('search') }}" placeholder="Введите название компании, тематику или сферу деятельности">
                        </div>
                    </div>

                    <div class="col-md-1">
                        <div class="form-group">
                            <button class="btn btn-primary border" type="submit"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <br>

    {% for row in companies|batch(4) %}
        <p>
        <div class="row">
        {% for chunk in row|batch(2) %}
            <div class="col-md-6">
            <div class="row">
            {% for company in chunk %}
                <div class="card company-card col-md-5 mr-5">
                    <div class="normal">
                        <div class="card-body">
                            <div class="img">
                                <img src="{{ absolute_url(asset(company.photo)) }}" alt="#">
                            </div>
                            <div class="company-name">
                <p>{{ company.name }}</p>
                </div>
                <div class="stats">
                    <p><i class="fa fa-star"></i> {{ company.assessment ?: 'Пока нет оценки' }}</p>
                    <p><i class="fa fa-comment"></i> {{ company.reviews|length ?: 'Нет комментариев' }}</p>
                    <p><a href="{{ path('company.show', { id : company.id}) }}" class="btn btn-light">Перейти</a></p>
                </div>
                </div>
                </div>
                </div>
            {% endfor %}
            </div>
            </div>
        {% endfor %}
        </div>
        </p>
    {% endfor %}

    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item" {{ thisPage == 1 ? 'class="disabled"' }}>
                <a class="page-link" href="{{ path('category.show', {page: thisPage-1 < 1 ? 1 : thisPage-1, search: app.request.get('search'), id: category.id}) }}">«</a>
            </li>

            {% for i in 1..maxPages %}
                {% if i > 0 %}
                    <li class="page-item {{ thisPage == i ? 'active' }}" >
                        <a class="page-link" href="{{ path('category.show', {page: i, search: app.request.get('search'), id: category.id}) }}">{{ i }}</a>
                    </li>
                {% endif %}
            {% endfor %}

            <li class="page-item" {{ thisPage == maxPages ? 'class="disabled"' }}>
                <a class="page-link" href="{{ path('category.show', {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage, search: app.request.get('search'), id: category.id}) }}">»</a>
            </li>
        </ul>
    </nav>
{% endblock %}