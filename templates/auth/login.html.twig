{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Вход!</h1>

    {% if error %}
        <span class="error">{{ error.messageKey }}</span>
    {% endif %}

    <form action="{{ path('login') }}" method="POST">

        <input type="text" name="_username" value="{{ lastUsername }}" placeholder="Введите логин...">

        <input type="password" name="_password">

        <button type="submit">Войти</button>

    </form>
    <a href="{{ path('reset.password.request') }}">Забыл пароль!</a>
</div>

    <a href="https://oauth.vk.com/authorize?client_id={{ vk_client }}&redirect_uri=https://localhost:8080/login/check-vkontakte&v=5.80" class="btn btn-primary"><i class="fa fa-vk"></i></a>

{% endblock %}
